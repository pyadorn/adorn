[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503,D107,D105,D415
max-line-length = 80
max-complexity = 10
docstring-convention = google
per-file-ignores = tests/*:S101,D100,D103 */__init__.py:D104,F401
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
